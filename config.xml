<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.phonegap.mythhair" version="1.0.0">
  <name>時尚導航</name>
  <description>Cloud reservation platform for studios and customers.</description>
  <author href="http://myth-hair.frog.tw/" email="andycg0327@hotmail.com">Myth International</author>
  <content src="index.html"/>
  <preference name="phonegap-version" value="cli-5.2.0" />
  <preference name="permissions" value="none"/>
  <preference name="orientation" value="portrait"/>
  <preference name="target-device" value="universal"/>
  <preference name="fullscreen" value="false"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="prerendered-icon" value="true"/>
  <preference name="stay-in-webview" value="false"/>
  <preference name="ios-statusbarstyle" value="black-opaque"/>
  <preference name="detect-data-types" value="true"/>
  <preference name="exit-on-suspend" value="false"/>
  <preference name="disable-cursor" value="false"/>
  <preference name="android-minSdkVersion" value="15"/>
  <preference name="android-installLocation" value="auto"/>
  <preference name="android-build-tool" value="gradle" />
  <preference name="SplashScreen" value="screen"/>
  <preference name="SplashMaintainAspectRatio" value="true"/>
  <preference name="AutoHideSplashScreen" value="false"/>
  <preference name="ShowSplashScreenSpinner" value="false"/>
  <preference name="StatusBarOverlaysWebView" value="false"/>
  <preference name="StatusBarBackgroundColor" value="#14283c"/>
  <gap:plugin name="org.apache.cordova.battery-status"/>
  <gap:plugin name="org.apache.cordova.camera"/>
  <gap:plugin name="org.apache.cordova.media-capture"/>
  <gap:plugin name="org.apache.cordova.console"/>
  <gap:plugin name="org.apache.cordova.contacts"/>
  <gap:plugin name="org.apache.cordova.device"/>
  <gap:plugin name="org.apache.cordova.device-motion"/>
  <gap:plugin name="org.apache.cordova.device-orientation"/>
  <gap:plugin name="org.apache.cordova.dialogs"/>
  <gap:plugin name="org.apache.cordova.file"/>
  <gap:plugin name="org.apache.cordova.file-transfer"/>
  <gap:plugin name="org.apache.cordova.geolocation"/>
  <gap:plugin name="org.apache.cordova.globalization"/>
  <gap:plugin name="org.apache.cordova.inappbrowser"/>
  <gap:plugin name="org.apache.cordova.media"/>
  <gap:plugin name="org.apache.cordova.network-information"/>
  <gap:plugin name="org.apache.cordova.vibration"/>
  <plugin name="cordova-plugin-splashscreen" spec="3.2.0" />
  <plugin name="cordova-plugin-whitelist"/>
  <plugin name="cordova-plugin-facebook4" spec="1.4.0">
    <param name="APP_ID" value="634530349985696"/>
    <param name="APP_NAME" value="Myth International"/>
  </plugin>
  <plugin name="phonegap-plugin-push" spec="1.4.2" source="pgb"/>
  <plugin name="cordova-plugin-x-toast" spec="2.4.0"/>
  <plugin name="cordova-plugin-statusbar" spec="2.1.1"/>
  <plugin name="cordova-plugin-filepath" spec="1.0.0"/>
  <plugin name="cordova-plugin-cache" spec="1.0.5"/>
  <plugin name="phonegap-plugin-barcodescanner-ps" spec="4.1.1"/>
  <plugin name="hu.dpal.phonegap.plugins.spinnerdialog" spec="1.2.0" source="pgb"/>
  <icon src="icon.png"/>
  <splash src="splash.png"/>
  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
    <icon src="res/icon/android/icon-36-ldpi.png" qualifier="ldpi"/>
    <icon src="res/icon/android/icon-48-mdpi.png" qualifier="mdpi"/>
    <icon src="res/icon/android/icon-72-hdpi.png" qualifier="hdpi"/>
    <icon src="res/icon/android/icon-96-xhdpi.png" qualifier="xhdpi"/>
    <splash src="res/screen/android/screen-ldpi-portrait.png" qualifier="port-ldpi"/>
    <splash src="res/screen/android/screen-mdpi-portrait.png" qualifier="port-mdpi"/>
    <splash src="res/screen/android/screen-hdpi-portrait.png" qualifier="port-hdpi"/>
    <splash src="res/screen/android/screen-xhdpi-portrait.png" qualifier="port-xhdpi"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
    <icon src="res/icon/ios/icon-57.png" width="57" height="57"/>
    <icon src="res/icon/ios/icon-72.png" width="72" height="72"/>
    <icon src="res/icon/ios/icon-57-2x.png" width="114" height="114"/>
    <icon src="res/icon/ios/icon-72-2x.png" width="144" height="144"/>
    <splash src="res/screen/ios/screen-iphone-portrait.png" width="320" height="480"/>
    <splash src="res/screen/ios/screen-iphone-portrait-2x.png" width="640" height="960"/>
    <splash src="res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" height="1136"/>
    <splash src="res/screen/ios/screen-ipad-portrait.png" width="768" height="1024"/>
    <splash src="res/screen/ios/screen-ipad-landscape.png" width="1024" height="768"/>
  </platform>
</widget>